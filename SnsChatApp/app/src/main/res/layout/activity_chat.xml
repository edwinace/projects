<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ChatActivity">

    <fragment class="com.avans.ronald.snschatapp.fragments.ChatMessagesFragment"
        android:id="@+id/messages_fragment"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <fragment class="com.avans.ronald.snschatapp.fragments.SendChatMessageFragment"
        android:id="@+id/send_message_fragment"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>