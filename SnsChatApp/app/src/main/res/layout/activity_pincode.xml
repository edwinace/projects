<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.avans.ronald.snschatapp.activities.PincodeActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/logo_sns"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:weightSum="1">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="51dp"
            android:inputType="numberPassword"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/pincode_input_1"
            android:layout_weight="0.17" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/pincode_button_0"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/pincode_button_1"
            android:layout_above="@+id/pincode_button_0"
            android:layout_toStartOf="@+id/pincode_button_0"
            android:onClick="onClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/pincode_button_2"
            android:layout_alignTop="@+id/pincode_button_1"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/pincode_button_3"
            android:layout_alignTop="@+id/pincode_button_2"
            android:layout_toEndOf="@+id/pincode_button_2"
            android:onClick="onClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/pincode_button_4"
            android:layout_above="@+id/pincode_button_1"
            android:layout_alignStart="@+id/pincode_button_1"
            android:onClick="onClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/pincode_button_5"
            android:layout_alignTop="@+id/pincode_button_4"
            android:layout_toEndOf="@+id/pincode_button_4"
            android:onClick="onClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/pincode_button_6"
            android:layout_alignBottom="@+id/pincode_button_5"
            android:layout_toEndOf="@+id/pincode_button_5"
            android:onClick="onClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/pincode_button_7"
            android:layout_above="@+id/pincode_button_4"
            android:layout_alignStart="@+id/pincode_button_4"
            android:onClick="onClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/pincode_button_8"
            android:layout_above="@+id/pincode_button_4"
            android:layout_toEndOf="@+id/pincode_button_4"
            android:onClick="onClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/pincode_button_9"
            android:layout_alignBottom="@+id/pincode_button_8"
            android:layout_toEndOf="@+id/pincode_button_8"
            android:onClick="onClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:id="@+id/pincode_input_back"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/pincode_button_3"
            android:onClick="onClick"/>

    </RelativeLayout>

</RelativeLayout>
