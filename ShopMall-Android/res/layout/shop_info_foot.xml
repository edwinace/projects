<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/btn_bg"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/upload_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bottom_btn_selector"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_myhome"
            android:layout_width="26.6dip"
            android:layout_height="26.6dp"
            android:background="@drawable/my_photo_icon_press"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="上传图片"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leave_message_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bottom_btn_selector"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_bome"
            android:layout_width="26.6dp"
            android:layout_height="26.6dp"
            android:background="@drawable/singup_white_small"
            android:gravity="center" >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="签到留言"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment_add_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bottom_btn_selector"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_swarm"
            android:layout_width="26.6dp"
            android:layout_height="26.6dp"
            android:layout_marginTop="2dip"
            android:background="@drawable/comment_image"
            android:gravity="center" >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="添加点评"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sendproblem_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bottom_btn_selector"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_primesg"
            android:layout_width="26.6dp"
            android:layout_height="26.6dp"
            android:background="@drawable/icon_warning_d"
            android:gravity="center" >
        </ImageView>

        <TextView
            android:id="@+id/txt_primsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="报错"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>