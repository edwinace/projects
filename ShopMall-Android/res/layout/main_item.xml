<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="88dp"
    android:layout_height="88dp"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="68dp"
        android:layout_height="68dp" >

        <ImageView
            android:id="@+id/main_item_imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:gravity="right" >

            <TextView
                android:id="@+id/main_item_number_txtv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/nubmer_bg"
                android:gravity="center"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_item_bottom"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal" >

        <ImageView
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:src="@drawable/logo_small" />

        <TextView
            android:id="@+id/main_item_bottomnumber_txtv1"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:src="@drawable/wcdmalogo_small" />

        <TextView
            android:id="@+id/main_item_bottomnumber_txtv2"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>